<% flash.each do |key, value| %>
  <% unless value.blank? %>
    <div>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-info">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>