<div class="row">
	<div  class="col-md-2">
		<p>
		  <strong>Title:</strong>
		  <%= @article.title %>
		</p>
		 
		<p>
		  <strong>Text:</strong>
		  <%= @article.text %>
		</p>

		<%= link_to 'Edit', edit_article_path(@article) %> |
		<%= link_to 'Back', articles_path %>
	</div>
	<div  class="col-md-4">
		<h2>Comments</h2>
		<%= render @article.comments %>

		<h2>Add a comment:</h2>
		<%= render 'comments/form' %>
	</div>
</div>